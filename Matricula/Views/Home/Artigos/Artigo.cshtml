@model  Matricula.Models.Artigo


<div class="col-md-4" >
    <div class="h-100 p-5 text-white bg-dark rounded-3">
        <div class="artigo-img-container">
            <img src=@Model.img
                class="img-fluid"
                style="width: 100%;"
                role="img"
                alt="@Model.titulo"
            />
        </div>
        <div class="artigo-conteudo-container">
            <h2 class="">@Model.titulo</h2>
            <div class="artigo-txt-container">
                <p class="">@Model.conteudo</p>
            </div>
            <p class="artigo-botao"><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Saiba mais &raquo;</a></p>
        </div>
    </div>
</div>
