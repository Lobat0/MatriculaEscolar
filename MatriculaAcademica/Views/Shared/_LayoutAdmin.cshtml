<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Matrícula", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto" style="width: 100%; float:none;">
                    <li class="nav-item">@Html.ActionLink("Aluno", "Index", "Alunos")</liclass="nav-item">
                    <li class="nav-item">@Html.ActionLink("Professor", "Index", "Professores")</li>
                    <li class="nav-item">@Html.ActionLink("Curso", "Index", "Cursos")</li>
                    <li class="nav-item">@Html.ActionLink("Curso-Disciplina", "Index", "CursosDisciplinas")</li>
                    <li class="nav-item">@Html.ActionLink("Disciplina", "Index", "Disciplinas")</li>
                    <li class="nav-item">@Html.ActionLink("Professor-Disciplina", "Index", "ProfessoresDisciplinas")</li>
                    <li class="nav-item">@Html.ActionLink("Matrícula", "Index", "Matriculas")</liclass="nav-item">
                    <li class="nav-item">@Html.ActionLink("Usuário", "Index", "Usuarios")</li>
                    <li class="nav-item dropdown" style="float:right;">
                        @if (!string.IsNullOrEmpty(Session["nome"] as string))
                        {
                            <a class="nav-link dropdown-toggle" id="dropdownUsuario" href="/Perfil" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @Session["nome"]
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownUsuario">
                                <div class="dropdown-item">Perfil</div>
                                @if (string.Equals((Session["tipo"] as string).Trim(), "admin"))
                                {
                                    @Html.ActionLink("Admin", "Index", "Admin")
                                }
                                <div class="dropdown-item"><a href="/Home/Logout">Sair</a></div>
                            </div>
                        }
                        else
                        {
                            @Html.ActionLink("Entrar", "Index", "Login")
                        }

                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
