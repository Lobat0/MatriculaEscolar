@model MatriculaAcademica.Models.Usuario

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-box" id="login-box">
        <div class="header bg-black">Efetuar Login</div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="body bg-gray">
            <div class="form-group">
                @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Login", @required = "" } })
                @Html.ValidationMessageFor(model => model.login, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Senha", @required = "" } })
                @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="footer">
            <div class="btn bg-black btn-block">
                <button type="submit" value="Entrar" class="btn bg-black btn-block">Logar</button>
            </div>

            <div class="btn bg-black btn-block">
                @Html.ActionLink("Cadastrar", "../CadastroLogin")
            </div>

            <div class="btn bg-black btn-block">
                @Html.ActionLink("Voltar", "../Home")
            </div>
        </div>

    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}