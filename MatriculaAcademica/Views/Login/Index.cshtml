@model MatriculaAcademica.Models.Usuario

@{
    ViewBag.Title = "Login";
}

<head>
    <link href="/Content/AdminLTE.css" rel="stylesheet" />
    <link href="~/Content/alert.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/font-awesome.css" rel="stylesheet" />
    <link href="/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/background.css")" rel="stylesheet" asp-append-version="true">
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<body class="mu-login">

    @if (ViewBag.Status == "Invalido")
    {
    <div class="alert danger-alert bg-red fancybox-overlay-fixed">
        <h3>Login ou Senha inválidos</h3>
        <a class="close">&times;</a>
    </div>
    }

    <div class="form-box mu-bg-texto" id="login-box">
        <div class="header bg-black">Efetuar Login</div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="body bg-gray">
            <div class="form-group">
                @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Login", @required = "" } })
                @Html.ValidationMessageFor(model => model.login, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Senha", @required = "" } })
                @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="footer bg-gray">
            <button type="submit" value="Entrar" class="btn bg-black btn-block">Entrar</button>

            <div class="btn bg-black btn-block">
                @Html.ActionLink("Voltar", "../Home")
            </div>

        </div>

    </div>
</body>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(".close").click(function () {
        $(this)
            .parent(".alert")
            .fadeOut();
    });
</script>

