@model IEnumerable<MatriculaAcademica.Models.Matricula>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="margin-custom1">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <!-- Start Modal Cadastro-->
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modalCadastro">
        Adicionar Nova Matricula
    </button>
    <hr />
    @using (Html.BeginForm("Create", "Matriculas", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="modal fade" id="modalCadastro" tabindex="-1" role="dialog" aria-labelledby="modalCadastroLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="modalCadastro">Cadastro de Matriculas</h4>
                    </div>
                    <div class="modal-body form-horizontal">
                        <div class="form-group form-inline">
                            @Html.Label("Data da Matricula", htmlAttributes: new { @class = "control-label col-md-2" })
                            <input class="form-control col-md-10" type="date" name="data_matricula" id="data_matricula" value=@Session["dataAtual"] style="border-color:red" disabled/>
                        </div>
                        <div class="form-group form-inline">
                            @Html.Label("ID do Curso", htmlAttributes: new { @class = "control-label col-md-2" })
                            <input class="form-control col-md-10" type="text" name="id_curso" id="id_curso" style="border-color:red" />
                        </div>
                        <div class="form-group form-inline">
                            @Html.Label("ID do Aluno", htmlAttributes: new { @class = "control-label col-md-2" })
                            <input class="form-control col-md-10" type="text" name="id_aluno" id="id_aluno" style="border-color:red" />
                        </div>
                        <div class="form-group form-inline">
                            @Html.Label("ID do Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
                            <input class="form-control col-md-10" type="text" name="id_usuario" id="id_usuario" value=@Session["id_usuario"] style="border-color:red" disabled />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- End Modal Cadastro-->

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <table class="table table-striped table-bordered" id="TabelaMatricula">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.data_matricula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aluno.nome_aluno)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Curso.nome_curso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario.login)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Convert.ToDateTime(item.data_matricula).ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aluno.nome_aluno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Curso.nome_curso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario.login)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.id_matricula }) |
                            @Html.ActionLink("Details", "Details", new { id = item.id_matricula }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.id_matricula })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $("#TabelaMatricula").DataTable({
                "language": {
                    "lengthMenu": "Exibe _MENU_ Registros por página",
                    "search": "Procurar",
                    "paginate": { "previous": "Retorna", "next": "Avança" },
                    "zeroRecords": "Nada foi encontrado",
                    "info": "Exibindo página _PAGE_ de _PAGES_",
                    "infoEmpty": "Sem registros",
                    "infoFiltered": "(filtrado de _MAX_ regitros totais)"
                }
            });
        });
    </script>
