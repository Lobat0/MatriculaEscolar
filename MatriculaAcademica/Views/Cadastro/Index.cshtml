@model MatriculaAcademica.Models.Aluno

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-box" id="cadastro-box">
        <div class="header bg-black">Cadastrar aluno</div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="body bg-gray">
        <div class="form-group">
            @Html.EditorFor(model => model.nome_aluno, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Nome", @required = "" } })
            @Html.ValidationMessageFor(model => model.nome_aluno, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "CPF", @required = "" } })
            @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.nascimento, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Data de nascimento", @required = "" } })
            @Html.ValidationMessageFor(model => model.nascimento, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="footer">
            <div class="btn bg-black btn-block">
                <button type="submit" value="Cadastrar" class="btn bg-black btn-block">Cadastrar</button>
            </div>

            <div class="btn bg-black btn-block">
                @Html.ActionLink("Cadastrar", "../CadastroLogin")
            </div>

            <div class="btn bg-black btn-block">
                @Html.ActionLink("Voltar", "../Home")
            </div>
        </div>

    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
